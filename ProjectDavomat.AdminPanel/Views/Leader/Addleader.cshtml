@{
    ViewData["Title"] = "Add Service Page";
    Layout = "_Layout";
}
@model AddLeaderViewModel
   <div class="box-header position-relative table-header mt-2">
        <div class="d-flex justify-content-between mt-3 com-header">
            <h3>Yangi leader qo'shish</h3>
        </div>
    </div>
    <form class="mx-4" asp-controller="leader" asp-action="addleader" enctype="multipart/form-data" method="post">
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="FirstName">Ism</label>
            <input asp-for="FirstName" type="text" class="form-control" id="title" placeholder="Ism">
        </div>
          <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="LastName">Familya</label>
            <input asp-for="LastName" type="text" class="form-control" id="title" placeholder="Familya">
        </div>
        <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
            <label asp-for="Position">Lavozimi</label>
            <input asp-for="Position" type="text" class="form-control" id="title" placeholder="Lavozimi">
        </div>
        <div class="input-group mx-4 "style="padding: 10px; font-size: 18px;">
            <input type="file" asp-for="Image" accept="image/*" class="form-control" id="inputGroupFile02">
        </div>
        @*Button group*@
        <div class="button-group text-center my-5">
            <button type="submit" class="btn btn-success me-5" style=" width:200px; " >
                Saqlash
            </button>
            <a asp-controller="leader" asp-action="leaders">
                <span class="btn btn-info"  style=" width:200px;">Bekor qilish</span>
            </a>
         </div>
    </form>