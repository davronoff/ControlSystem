@{
    ViewData["Title"] = "Staffs Page";
    Layout = "_Layout";
}
@model List<Staff>
    <div class="row blok mt-5">
        <div class="col-xs-11">
            <div class="box data-table">
                <div class="box-header position-relative table-header mt-2">
                    <div class="d-flex justify-content-between mt-3 mx-4 com-header">
                        <h3>Staffs</h3>
                        <a asp-controller="staff" asp-action="addstaff">
                            <span class="btn btn-success"><i class="las la-plus"></i>Yangi hodim qo'shish</span>
                        </a>
                    </div>
                </div>
                <div class="jadval box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>Ism</th>
                            <th>Familiyas</th>
                            <th>Rasmi</th>
                            <th>Batafsil</th>
                            <th>Lavozimi</th>
                            <th style="text-align:center;">Action</th>
                        </tr>
                        @foreach (var item in Model)
                    {
                         <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            @{
                                string imageSource = @item.Image;
                                if (!imageSource.Contains("http"))
                                {
                                    imageSource = "~/images/" + imageSource;
                                }
                                else if  (imageSource.Contains("ilyosbek"))
                                {
                                    string[] vs = imageSource.Split(new string[] {"https://ilyosbek.uz/rtm/images/"}, StringSplitOptions.None);
                                    imageSource = "~/images/" + vs[1];
                                }
                            }
                            <td><img src="@imageSource" asp-append-version="true" style="width: 50px;"/></td>
                                    <td>
                                @{
                                    string text = item.About;
                                    if (text.Length > 15)
                                    {
                                        text = item.About.Substring(0, 15);
                                    }
                                }
                                @text...
                            </td>
                            <td>@item.Position</td>
                            @*action*@
                            <td class="cell">
                                <a asp-controller="staff" asp-action="edit" asp-route-id="@item.Id" >
                                    <span class="btn btn-success">Tahrirlash</span>
                                </a>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal">O'chirish</button>
                                <!-- Modal -->
                                <div class="modal fade" id="deleteModal" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <h4>Rostdan ham bu hodimni o'chirmoqchimisiz?</h4>
                                            </div>
                                            <div class="modal-footer">
                                               <a asp-controller="staff" asp-action="editstaff" asp-route-id="@item.Id">
                                                    <span class="btn btn-success">Tahrirlash</span>
                                               </a>
                                               <a asp-controller="staff" asp-action="delete" asp-route-id="@item.Id"
                                                    onclick="return confirm('Rostdan ham o\'chirmoqchisiz?');" class="btn btn-danger">O'chirish
                                               </a> 
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>   
                    }
                    
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>