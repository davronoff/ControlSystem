@{
    ViewData["Title"] = "Category Page";
    Layout = "_Layout";
}
@model List<CategoryViewModel>
    <div class="row blok mt-5">
        <div class="col-xs-11">
            <div class="box data-table">
                <div class="box-header position-relative table-header mt-2">
                    <div class="d-flex justify-content-between mt-3 mx-4 com-header">
                        <h3>Kurs kategoriyalari</h3>
                        <a asp-controller="category" asp-action="add">
                            <span class="btn btn-success"><i class="las la-plus"></i>Yangi qo'shish</span>
                        </a>
                    </div>
                </div>
                <div class="jadval box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>Id</th>
                            <th>Kategoriya nomi</th>
                            <th style="text-align:center;">Action</th>
                        </tr>
                    @foreach(var item in Model)
                    {
                     <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td class="cell">
                                <a asp-controller="category" asp-action="edit" asp-route-id="@item.Id">
                                    <span class="btn btn-success">Tahrirlash</span>
                                </a>

                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal">O'chirish</button>

                                <!-- Modal -->
                                <div class="modal fade" id="deleteModal" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title text-secondary" id="exampleModalLabel">Ogohlantirish</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <h4>Rostdan ham o'chirmoqchimisiz?</h4>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal" style="width: 80px;">Yo'q</button>
                                                <a asp-controller="category" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" style="width: 80px;">Ha</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                    </tr>   
                    }
                    </table>
                </div>
            </div>
        </div>
    </div>
