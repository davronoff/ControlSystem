@{
    ViewData["Title"] = "AddCourse Page";
    Layout = "_Layout";
}
@model Course

            <div class="box-header position-relative table-header mt-2">
                <div class="d-flex justify-content-between mt-3 com-header">
                    <h3>Add new course</h3>
                </div>
            </div>
            <form asp-controller="course" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Name">Nomi</label>
                    <input asp-for="Name" type="text" class="form-control" id="title" value="@Model.Name">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Price">Narxi</label>
                    <input asp-for="Price" type="text" class="form-control" id="title" value="@Model.Price">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Duration">Davomiyligi</label>
                    <input asp-for="Duration" type="text" class="form-control" id="title" value="@Model.Duration">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Description">Batafsil</label>
                    <textarea asp-for="Description" class="form-control" id="description" rows="12">@Model.Description</textarea>
                </div>
                <input type="hidden" asp-for="Image" value="@Model.Image"/>
                <input type="hidden" asp-for="CourseCategoryId" value="@Model.CourseCategoryId"/>


