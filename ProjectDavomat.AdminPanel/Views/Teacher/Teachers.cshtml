@{
    ViewData["Title"] = "Teacher Page";
    Layout = "_Layout";
}
@model List<Teacher>
  <div class="row blok mt-5">
    <div class="col-xs-11">
        <div class="box data-table">
            <div class="box-header position-relative table-header mt-2">
                <div class="d-flex justify-content-between mt-3 mx-4 com-header">
                    <h3>Mentorlar</h3>
                    <a asp-controller="teacher" asp-action="addteacher">
                        <span class="btn btn-success"><i class="las la-plus"></i>Yangi mentor qo'shish</span>
                    </a>
                </div>
            </div>
            <div class="jadval box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Ism</th>
                        <th>Familya</th>
                        <th>Mahorat</th>
                        <th>Rasm</th>
                        <th>Tajriba</th>
                        <th>Kontakt</th>
                        <th style="text-align:center;">Action</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                     <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastaName</td>
                        <td>
                            @{
                                    string text = item.Skills;
                                    if (text.Length > 15)
                                    {
                                       text = item.Skills.Substring(0, 15);
                                    }
                                }
                                @text...
                        </td>
                         @{
                            string imageSource = @item.Image;
                            if (!imageSource.Contains("http"))
                            {
                                imageSource = "~/images/" + imageSource;
                            }
                            else if  (imageSource.Contains("ilyosbek"))
                            {
                                string[] vs = imageSource.Split(new string[] {"https://ilyosbek.uz/rtm/images/"}, StringSplitOptions.None);
                                imageSource = "~/images/" + vs[1];
                            }
                         }
                        <td><img src="@imageSource" asp-append-version="true" style="width: 50px;"/></td>
                        <td>@item.Experince</td>
                        <td>@item.Social</td>
                        <td class="cell">
                            <a asp-controller="teacher" asp-action="edit" asp-route-id="@item.Id">
                                    <span class="btn btn-success">Tahrirlash</span>
                             </a>
                             <a asp-controller="teacher" asp-action="delete" asp-route-id="@item.Id"
                                    onclick="return confirm('Rostdan ham o\'chirmoqchisiz?');" class="btn btn-danger">O'chirish
                             </a> 
                        </td>
                    </tr>   
                    }
                   
                </table>
            </div>
        </div>
    </div>
  </div>